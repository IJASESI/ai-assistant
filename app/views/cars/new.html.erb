<h1>Add a car</h1>

<%= form_with model: @car do |f| %>
  <div>
    <%= f.label :brand, "Brand" %>
    <%= f.text_field :brand %>
  </div>

  <div>
    <%= f.label :model, "Model" %>
    <%= f.text_field :model %>
  </div>

  <div>
    <%= f.label :year, "Year" %>
    <%= f.number_field :year %>
  </div>

  <%= f.submit "Save" %>
<% end %>
